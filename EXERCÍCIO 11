#include <stdio.h>
#include <string.h>
#include <ctype>

#define MAX_LEN 1000

int CVogais(const char *palavra) {
    int contador = 0;
    while(*palavra) {
        char c = tolower(*palavra); {
        if(c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u') {
            contador ++;

        }
        palavra++;
    }
    return contador;
}

