#include <stdio.h>

int main() {
    int horas = 0, minutos = 0, segundos = 0;

    printf("Cron√¥metro:\n");

    while (1) { 
        printf("\r%02d:%02d:%02d", horas, minutos, segundos); 
        fflush(stdout);

        segundos++;

        if (segundos == 60) {
            segundos = 0;
            minutos++;
        }

        if (minutos == 60) {
            minutos = 0;
            horas++;
        }

        if (horas == 24) {
            horas = 0;
        }

        sleep(1); 
    }

    return 0;
}
